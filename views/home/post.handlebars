<div class="container">

	<div class="row">

		<!-- Post Content Column -->
		<div class="col-lg-8">

			<!-- Title -->
			<h1 class="mt-4">{{post.title}}</h1>

			<!-- Author -->
			<p class="lead">
				by
				<a href="#">Start Bootstrap</a>
			</p>

			<hr>

			<!-- Date/Time -->
			<p>Posted on {{generateDate date 'MMMM Do YYYY'}}</p>

			<hr>

			<!-- Preview Image -->
			<img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

			<hr>

			<!-- Post Content -->
			<p class="lead">{{post.body}}</p>


			<hr>
			{{!-- back 167  --}}
			{{#if user}}
				{{#if post.allowComments}}
					<!-- Comments Form -->
					<div class="card my-4">
						<h5 class="card-header">Leave a Comment:</h5>
						<div class="card-body">
							<form action="/admin/comments" method="POST">
								<div class="form-group">
									<textarea class="form-control" name="body" rows="3"></textarea>
									<input type="hidden" name="id" value="{{post.id}}">
								</div>
								<button type="submit" class="btn btn-primary">Submit</button>
							</form>
						</div>
					</div>
				{{else}}
					<h3>Bình luận bị vô hiệu hóa</h3>
					<hr>
				{{/if}}
			{{else}}
					<h4><a href="/login">Đăng nhập để bình luận bài viết</a></h4>
					<hr>
			{{/if}}
			<!-- Single Comment -->
			{{#each post.comments}}
			<div class="media mb-4">
				<img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
				<div class="media-body">
					<h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
					{{body}}
				</div>
			</div>
			{{/each}}
