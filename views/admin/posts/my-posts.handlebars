<h1>My Post</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu Đề</th>
            <th>Ảnh</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>Link</th>
            <th>Ngày</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td scope="row">{{id}}</td>
            <td>{{title}}</td>
            <td><img src="/uploads/{{file}}" alt="" height="50"></td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{id}}">Xem</a></td>
            <td>{{generateDate date 'MMMM Do YYYY'}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Sửa</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>