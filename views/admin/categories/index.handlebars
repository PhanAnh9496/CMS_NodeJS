<div class="row">
    <div class="col-sm-4">
        <h1>Create Category</h1>
        <form action="/admin/categories/create" method="POST">
            <div class="form-group">
              <label for="name">Tên Category</label>
              <input type="text" name="name" id="" class="form-control" placeholder="Nhập category mới">
            </div>
            <button class="btn btn-primary">Tạo Category</button>
        </form>
    </div>
    <div class="col-sm-8">
        <h1>Categories</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}    
                    <tr>
                        <td>{{id}}</td>
                        <td>{{name}}</td>
                        <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></td>
                        <td>
                            <form action="/admin/categories/{{id}}?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}    
            </tbody>
        </table>
    </div>
</div>